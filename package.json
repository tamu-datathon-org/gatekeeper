{
  "name": "gatekeeper",
  "private": true,
  "version": "1.0.0",
  "description": "Central authentication for all things datathon",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && npm run build:sass",
    "build:prod": "npm run build",
    "build:sass": "sass scss/custom.scss public/static/css/style.css --style=compressed",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "run-p dev:nest start:proxy dev:sass",
    "start:dev": "run-p dev:nest dev:sass",
    "start:proxy": "node scripts/dev.js",
    "start:debug": "env NODE_ENV=dev nest start --debug --watch",
    "start:prod": "node dist/main",
    "dev:nest": "env NODE_ENV=dev nest start --watch",
    "dev:sass": "run-p dev:force-sass dev:watch-sass",
    "dev:force-sass": "sass scss/custom.scss public/static/css/style.css",
    "dev:watch-sass": "sass --watch scss/custom.scss public/static/css/style.css",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "env NODE_ENV=test jest",
    "test:ci": "env NODE_ENV=test jest --ci",
    "test:watch": "env NODE_ENV=test jest --watch",
    "test:cov": "env NODE_ENV=test jest --coverage",
    "test:debug": "env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.5",
    "@nestjs/core": "^8.0.5",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mongoose": "^8.0.0",
    "@nestjs/passport": "^8.0.0",
    "@nestjs/platform-express": "^8.0.5",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "bootstrap": "^4.5.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "ejs": "^3.1.6",
    "email-validator": "^2.0.4",
    "express-session": "^1.17.2",
    "mailgun-js": "^0.22.0",
    "mongoose": "^5.13.15",
    "nestjs-easyconfig": "^2.4.0",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "sass": "^1.37.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.0",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.5",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.11.2",
    "@types/ejs": "^3.0.7",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^26.0.24",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.4.9",
    "@types/passport-google-oauth20": "^2.0.9",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "express": "^4.17.1",
    "http-proxy": "^1.18.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "mongodb-memory-server": "^7.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "setupFiles": [
      "../test/load-test-env.ts"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
