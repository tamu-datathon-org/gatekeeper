<!DOCTYPE html>
<html class="loginPage" lang="en">
<%- include ("../partials/head") %>

<body class="loginPage text-center">
  <form class="form-signin" method="post" action="/auth/login?r=<%= locals.redirectLink %>" style="max-width: 400px;"
    class="mx-auto">
    <!-- csrf token for integrity :) -->
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <!-- logo/image -->
    <!-- TODO: change the image link to static image -->
    <img class="mb-4" src="https://tamudatathon.com/static/img/logos/main.png" alt="" width="72" height="72" />
    <h1 class="h3 mb-3 font-weight-normal">Sign in</h1>

    <!-- EMAIL -->
    <label for="loginEmail" class="sr-only">Email</label>
    <input required autofocus type="email" class="form-control <%= locals.emailError ? 'is-invalid' : null%>"
      id="loginEmail" name="email" value="<%= locals.emailPrefill ? locals.emailPrefill : null %>"
      placeholder="Email address" />
    <!-- Input name must be "username" for passport authentication strategy-->
    <% if (locals.emailError) { %>
    <div class="invalid-feedback"><%= locals.emailError %></div>
    <% } %>

    <!-- PASSWORD -->
    <label for="loginPassword" class="sr-only">Password</label>
    <input required type="password" class="form-control" id="loginPassword" name="password" placeholder="Password" />

    <!-- TODO: should we keep remember me? -->
    <!-- <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div> -->

    <div class="text-center">
      <button type="submit" class="btn btn-primary text-center mx-auto">Submit</button>
    </div>
    <div class="text-center my-3">
      - OR -
    </div>
    <div class="oauth-login-btns text-center">
      <a class="btn btn-primary google-login-btn" href="/auth/login/google?r=<%= locals.redirectLink %>">
        <i class="fab fa-google"></i>
        Login with Google
      </a>
      <a class="btn btn-primary facebook-login-btn" href="/auth/login/facebook?r=<%= locals.redirectLink %>">
        <i class="fab fa-facebook-f"></i>
        Login with Facebook
      </a>
    </div>

    <!-- copyright TD -->
    <p class="mt-5 mb-3 text-muted text-center">&copy; TAMUDatathon 2020</p>
  </form>

  <%- include ("../partials/scripts") %>
</body>

</html>